<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background">

    <!-- Fixed Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="40dp"
        android:paddingBottom="24dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/status_card_background"
            android:padding="32dp"
            android:layout_marginBottom="24dp"
            android:elevation="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DND Scheduler"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tv_service_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Status"
                android:textSize="16sp"
                android:textColor="@color/hint_color"
                android:gravity="center" />

        </LinearLayout>

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <!-- DND Menu Button -->
            <LinearLayout
                android:id="@+id/btn_dnd_menu"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_button_ripple"
                android:padding="12dp"
                android:elevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DND MENU:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_dnd_menu_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIBRATE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Saturday Schedule Dropdown -->
            <LinearLayout
                android:id="@+id/layout_saturday_dropdown"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_button_ripple"
                android:padding="12dp"
                android:elevation="6dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturday follows:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_saturday_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None (Holiday)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <Spinner
                    android:id="@+id/spinner_saturday_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@drawable/dropdown_popup_background"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Today's Classes Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="500dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp">

        <!-- Today's Classes Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:elevation="3dp">

            <TextView
                android:id="@+id/tv_today_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“– Today's Classes"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color"
                android:layout_marginBottom="20dp" />

            <!-- RecyclerView for classes - fills available space and scrolls -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_today_classes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical"
                android:paddingBottom="16dp"
                android:clipToPadding="false"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Developer Credits Footer - Always at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background"
        android:padding="20dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Harish Kumar"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Published by SASTRANET"
            android:textSize="12sp"
            android:textColor="@color/hint_color"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
