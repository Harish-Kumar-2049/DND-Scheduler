<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Original DND Status TextView with enhanced styling -->
    <TextView
        android:id="@+id/tv_dnd_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DND Auto-Scheduling is OFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:layout_marginBottom="16dp" />

    <!-- Original Toggle Button with full width -->
    <Button
        android:id="@+id/btn_toggle_dnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn ON DND Auto-Scheduling"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- New Timetable Info TextView -->
    <TextView
        android:id="@+id/tv_timetable_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading timetable info..."
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />  <!-- Initially hidden -->

    <!-- New Debug Button -->
    <Button
        android:id="@+id/btn_debug_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug Timetable"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:visibility="gone" />  <!-- Initially hidden -->

    <!-- New Instructions TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions:\n1. Grant DND access when prompted\n2. Enable auto-scheduling to automatically turn DND on/off during classes\n3. Check logs if timetable parsing fails"
        android:textSize="12sp"
        android:padding="12dp"
        android:background="#e8f5e8"
        android:layout_marginTop="16dp" />

</LinearLayout>