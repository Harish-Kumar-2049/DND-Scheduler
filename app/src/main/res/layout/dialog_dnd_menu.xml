<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/main_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DND Menu"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Auto Silent Toggle Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:background="@drawable/status_card_background"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Auto Silent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Switch
            android:id="@+id/switch_auto_silent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Mode Selection Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silent Mode Type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:id="@+id/radio_group_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/status_card_background"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radio_dnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do Not Disturb (DND)"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibrate Mode"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_silent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silent Mode"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RadioGroup>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/main_button_ripple"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/white"
            android:background="@drawable/main_button_ripple" />

    </LinearLayout>

</LinearLayout>